<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.smartelectronics.lovelylight.fragments.AboutFragment">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/colorful_small"
            android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/txt_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile"
            android:fontFamily="@font/ubuntu"
            android:gravity="center"
            android:text="Magic Light"
            android:textColor="@color/fbutton_color_emerald"
            android:textSize="@dimen/_40sdp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/txt_app_name"
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/fbutton_color_asbestos"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginTop="@dimen/_8sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_developer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/ubuntu"
                        android:text="\u2022 Developer: Saeed Razazzadeh"
                        android:textColor="@color/fbutton_color_turquoise"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_developer"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/ubuntu"
                        android:text="\u2022 Produced by Smart Electronics company"
                        android:textColor="@color/fbutton_color_turquoise"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_company"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/ubuntu"
                        android:text="\u2022 Phone number : 09352388397 - 09132016380"
                        android:textColor="@color/fbutton_color_turquoise"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_telephone"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:orientation="horizontal"
                        android:gravity="center">

                            <TextView
                                android:id="@+id/txt_copy_right"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:background="@drawable/background_text"
                                android:gravity="center"
                                android:text="All right reserved"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/fbutton_color_turquoise"
                                android:textStyle="bold"/>
                            <Space
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txt_version"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:gravity="center"
                                android:background="@drawable/background_text"
                                android:text="Magic Light version 1.2"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/fbutton_color_turquoise"
                                android:textStyle="bold"/>

                    </LinearLayout>




            </RelativeLayout>



        </ScrollView>


</RelativeLayout>
