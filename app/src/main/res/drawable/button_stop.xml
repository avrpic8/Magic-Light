<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/fbutton_color_pomegranate" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners
                android:radius="200dp" />
            <padding
                android:left="3dp"
                android:right="3dp"
                android:top="3dp"
                android:bottom="3dp" />
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/fbutton_color_pomegranate"
                android:endColor="@color/fbutton_color_carrot"
                android:type="linear"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners
                android:radius="200dp" />
            <padding
                android:left="3dp"
                android:right="3dp"
                android:top="3dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>